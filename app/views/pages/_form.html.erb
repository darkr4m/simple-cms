<%= error_messages_for(f.object) %>
<div class="form-group row">
  <%= f.label(:subject_id, nil, class:"col-12 col-sm-2 col-form-label" ) %>
  <div class="col-12 col-sm-10">
    <%= f.select(:subject_id, @subjects.map {|s| [s.name, s.id]}) %>
  </div>
</div>
<div class="form-group row">
  <%= f.label(:name, nil, class:"col-12 col-sm-2 col-form-label" ) %>
  <div class="col-12 col-sm-10">
    <%= f.text_field(:name, class:"form-control form-control-sm") %>
  </div>
</div>
<div class="form-group row">
  <%= f.label(:position, nil, class:"col-12 col-sm-2 col-form-label" ) %>
  <div class="col-12 col-sm-10">
    <%= f.select(:position, 1..@page_count) %>
  </div>
</div>
<div class="form-group row">
  <%= f.label(:permalink, nil, class:"col-12 col-sm-2 col-form-label" ) %>
  <div class="col-12 col-sm-10">
    <%= f.text_field(:permalink, class:"form-control form-control-sm") %>
  </div>
</div>
<div class="form-group row">
  <div class="col-12 col-sm-2">
      <%= f.label(:visible, class:"form-check-label" ) %>
  </div>
  <div class="col-12 col-sm-10">
    <div class="form-check">
      <%= f.check_box(:visible, class:'form-check-input m-0') %>
    </div>
  </div>
</div>
