<% @page_title = "Delete Admin User" %>

<div class="action-wrap">
  <div class="header">
    <h2>Delete Admin User</h2>
    <%= link_to(fa_icon("arrow-left", text: 'Back to List'), admin_users_path, :class => 'back-link') %>
  </div>
    <div class="form-container delete-reference">
      <%= form_for(@admin_user, :method => 'delete') do |f| %>
      <h4>Are you sure you want to permanently delete this Admin User?</h4>
      <p><%= f.object.name %></p>
      <%= f.submit("Delete Admin User", class:"btn btn-danger") %>
      <% end %>
    </div>
</div>
