<% @page_title= "All Admin Users" %>

<div class="row admin-header">
  <div class="col-12">
    <h2>Admin Users</h2>
  </div>
  <div class="col-6">
    <%= link_to(fa_icon("arrow-left", text: 'Back to Menu'), admin_path, :class => 'back-link' )%>
  </div>
  <div class="col-6">
    <%= link_to(fa_icon("plus", text: 'Add New Admin User'), new_admin_user_path, :class => 'new') %>
  </div>
</div>
<div class="table-responsive index">
  <div>
    <%= pluralize(@admin_users.size, 'admin user') %> found.
  </div>
  <table class="table table-sm table-hover" summary="Admin Users list">
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
    <tr>
      <td><%= admin_user.username %></td>
      <td><%= admin_user.name %></td>
      <td><%= admin_user.email %></td>
      <td class="actions">
        <%= link_to(fa_icon("pencil"), edit_admin_user_path(admin_user), :class => 'action-edit') %>
        <%= link_to(fa_icon("trash"), delete_admin_user_path(admin_user), :class => 'action-delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
