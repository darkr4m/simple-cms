<% @page_title = "Admin Login" %>

<div class="login jumbotron">
  <%= form_tag(access_attempt_login_path, :method => :post) do %>
    <div class="form-group row">
      <%= label_tag(:username, nil, class:["col-sm-2", "col-form-label"]) %>
      <div class="col-sm-10">
        <%= text_field_tag(:username, params[:username], class:"form-control") %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag(:password, nil, class:["col-sm-2", "col-form-label"]) %>
      <div class="col-sm-10">
        <%= password_field_tag(:password, nil, class:"form-control") %>
      </div>
    </div>
    <div class="form-group row">
      &nbsp;
      <%= submit_tag("Log In", class: "btn btn-primary mx-auto") %>
    </div>

  <% end %>
</div>
