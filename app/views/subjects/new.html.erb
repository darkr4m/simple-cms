<% @page_title = "Add New Subject" %>

<div class="action-wrap">
  <div class="header">
    <h2>Create Subject</h2>
    <%= link_to(fa_icon("arrow-left", text: 'Back to List'), subjects_path, :class => 'back-link') %>
  </div>
  <div class="form-container">
    <%= form_for(@subject, :url => subjects_path, :method => 'post') do |f| %>
    <%= render(:partial => 'form', :locals => {:f => f}) %>
    <%= f.submit("Create Subject", class:"btn btn-primary") %>
    <% end %>
  </div>
</div>
