<% @page_title = "Delete Subject" %>

<div class="action-wrap">
  <div class="header">
    <h2>Delete Subject</h2>
    <%= link_to(fa_icon("arrow-left", text: 'Back to List'), subjects_path, :class => 'back-link') %>
  </div>
  <div class="form-container delete-reference">
    <%= form_for(@subject, :url => subject_path(@subject), :method => 'delete') do |f| %>
    <h4>Are you sure you want to permanently delete this subject?</h4>
    <p><%= f.object.name %></p>
  </div>
    <div class="form-submit text-center">
      <%= f.submit("Delete Subject", class:"btn btn-danger") %>
    </div>
  <% end %>
</div>
