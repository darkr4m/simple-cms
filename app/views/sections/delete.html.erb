<% @page_title = "Delete Section" %>

<div class="action-wrap">
  <div class="header">
    <h2>Delete Section</h2>
    <%= link_to(fa_icon("arrow-left", text: 'Back to List'), sections_path(:page_id => @page.id), :class => 'back-link') %>
  </div>
  <div class="form-container delete-reference">
    <%= form_for(@section, :url => section_path(@section, :page_id => @page.id), :method => 'delete') do |f| %>
    <h4>Are you sure you want to permanently delete this section?</h4>
    <p><%= f.object.name %></p>
  </div>
    <div class="form-buttons text-center">
      <%= f.submit("Delete Section", class:"btn btn-danger") %>
    </div>
  <% end %>
</div>
