<% @page_title = "#{@section.name}" %>


<div class="action-wrap">
  <div class="header">
    <h2>Show Section</h2>
    <%= link_to(fa_icon("arrow-left", text: 'Back to List'), sections_path(:page_id => @page.id), :class => 'back-link') %>
  </div>
  <div class="table-responsive">
    <table class="table table-sm section" summary="Section detail view">
      <tr>
        <th>Page ID</th>
        <td><%= @section.page_id %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= @section.name %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= @section.position %></td>
      </tr>
      <tr>
        <th>Visible?</th>
        <td><%= status_tag(@section.visible) %></td>
      </tr>
      <tr>
        <th>Content Type</th>
        <td><%= @section.content_type %></td>
      </tr>
      <tr>
        <th>Content</th>
        <td><%= @section.content %></td>
      </tr>
      <tr>
        <th>Created</th>
        <td><%= @section.created_at.to_s(:long) %></td>
      </tr>
      <tr>
        <th>Updated</th>
        <td><%= @section.updated_at.to_s(:long) %></td>
      </tr>
    </table>
  </div>
</div>
